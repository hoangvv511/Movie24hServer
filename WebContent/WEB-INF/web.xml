<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>WebPhim</display-name>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>Filter.EncodingFilter</filter-class>
	</filter>
	<filter>
		<filter-name>addHeaderFilter</filter-name>
		<filter-class>Filter.AddHeaderFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>addHeaderFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>AddComment</servlet-name>
		<servlet-class>Controller.AddComment</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ChangePassword</servlet-name>
		<servlet-class>Controller.ChangePassword</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteComment</servlet-name>
		<servlet-class>Controller.DeleteComment</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetAllComment</servlet-name>
		<servlet-class>Controller.GetAllComment</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetAllFilm</servlet-name>
		<servlet-class>Controller.GetAllFilm</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetCountFilm</servlet-name>
		<servlet-class>Controller.GetCountFilm</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetFilmByCountry</servlet-name>
		<servlet-class>Controller.GetFilmByCountry</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetFilmById</servlet-name>
		<servlet-class>Controller.GetFilmById</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetFilmByName</servlet-name>
		<servlet-class>Controller.GetFilmByName</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetFilmByType</servlet-name>
		<servlet-class>Controller.GetFilmByType</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetListFilmByListId</servlet-name>
		<servlet-class>Controller.GetListFilmByListId</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>Controller.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>Controller.Register</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateFavorite</servlet-name>
		<servlet-class>Controller.UpdateFavorite</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AddComment</servlet-name>
		<url-pattern>/AddComment</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>ChangePassword</servlet-name>
		<url-pattern>/ChangePassword</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>DeleteComment</servlet-name>
		<url-pattern>/DeleteComment</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetAllComment</servlet-name>
		<url-pattern>/GetAllComment</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetAllFilm</servlet-name>
		<url-pattern>/GetAllFilm</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetCountFilm</servlet-name>
		<url-pattern>/GetCountFilm</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetFilmByCountry</servlet-name>
		<url-pattern>/GetFilmByCountry</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetFilmById</servlet-name>
		<url-pattern>/GetFilmById</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetFilmByName</servlet-name>
		<url-pattern>/GetFilmByName</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetFilmByType</servlet-name>
		<url-pattern>/GetFilmByType</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>GetListFilmByListId</servlet-name>
		<url-pattern>/GetListFilmByListId</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/Register</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>UpdateFavorite</servlet-name>
		<url-pattern>/UpdateFavorite</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>